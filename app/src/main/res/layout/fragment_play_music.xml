<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.unical.mat.lifetune.activity.MainActivity">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="it.unical.mat.lifetune.activity.MainActivity">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context="it.unical.mat.lifetune.activity.MainActivity">

            <View
                android:id="@+id/floating_search_view_placeholder"
                android:layout_width="match_parent"
                android:layout_height="@dimen/float_search_view_placeholder_height"
                android:animateLayoutChanges="true"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:layout_scrollFlags="scroll|enterAlways|snap" />

            <android.support.design.widget.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:tabTextColor="@color/lightGray"
                app:tabSelectedTextColor="@color/lightGray"
                app:tabIndicatorColor="@color/lightGray"
                app:layout_collapseMode="pin"
                app:tabIndicatorHeight="4dp" />

        </android.support.design.widget.AppBarLayout>

        <LinearLayout
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/music_player_height" />

        </LinearLayout>

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="@dimen/design_appbar_elevation"
            android:layout_marginTop="70dp">

            <LinearLayout
                android:id="@+id/bottom_sheet_music_player"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:orientation="vertical"
                app:behavior_hideable="false"
                app:behavior_peekHeight="@dimen/music_player_height"
                app:layout_behavior="@string/bottom_sheet_behavior">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    app:layout_anchor="@id/main_content"
                    app:cardCornerRadius="0dp">

                    <it.unical.mat.lifetune.view.CustomExoPlayerView
                        android:id="@+id/music_player"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/music_player_height"
                        tools:context="it.unical.mat.lifetune.activity.MainActivity"

                        app:player_layout_id="@layout/custom_exo_simple_player_view"
                        app:controller_layout_id="@layout/custom_exo_playback_control_view"

                        app:use_controller="true"
                        app:hide_on_touch="false"
                        app:use_artwork="false"
                        app:show_timeout="0"
                        app:resize_mode="fit" />

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </android.support.design.widget.CoordinatorLayout>
    </android.support.design.widget.CoordinatorLayout>

    <com.arlib.floatingsearchview.FloatingSearchView
        android:id="@+id/floating_search_view"
        tools:context="it.unical.mat.lifetune.activity.MainActivity"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:animateLayoutChanges="true"
        app:floatingSearch_close_search_on_keyboard_dismiss="false"
        app:floatingSearch_dimBackground="true"
        app:floatingSearch_dismissOnOutsideTouch="true"
        app:floatingSearch_leftActionMode="showHamburger"
        app:floatingSearch_searchBarMarginLeft="8dp"
        app:floatingSearch_searchBarMarginTop="8dp"
        app:floatingSearch_searchBarMarginRight="8dp"
        app:floatingSearch_searchHint="@string/search_music_title"
        app:floatingSearch_showSearchKey="true"
        app:floatingSearch_suggestionsListAnimDuration="250" />

</RelativeLayout>